<style type="text/css">
    .img-selection {
        cursor: pointer;
        margin: 0px;
        padding: 0px;
        border: none;
        appearance: none;
        height: 240px;
        width: 240px;
        position: relative;
    }
    .overlay {
        background-image: radial-gradient(rgba(255, 255, 255, 0), rgba(125, 249, 255, 255));
        position: absolute;
        left: 0;
        top: 0;
        width: 240px;
        height: 240px;
        opacity: 0%;
        transition: opacity 0.5s ease-in;
    }
    .overlay:hover {
        opacity: 40%;
    }
    .pixel-img {
        image-rendering: pixelated;
        border-radius: 0px;
    }
</style>

<form style="height:{{height}}px;width:{{width}}px">
    <h2>Select one of the following...</h2>
    {{#each images}}
        <button class="img-selection" name="result" type="submit" value="{{this}}">
            <img
                class="pixel-img"
                style="background:{{color this}}"
                height="240" 
                width="240" 
                src="{{this}}" 
            />
            <div class="overlay" />
        </button>
    {{/each}}
</form>